<header class="header">
	<div class="">
		{{> logo}}
	</div>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{>nav list=header }}
		</div>
	</nav>

</header>

<main class="main">

	{{#with info}}
	<div class="info">

		<h1 class="info_title">{{title}}</h1>
		<p class="info_description">{{description}}</p>

	</div>
	{{/with}}

	{{#with form}}
	<div class="form">

		{{#each inputs}}
		<div class="form_input_list">

			<input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="{{id}}" />

		</div>
		{{/each}}

		<div class="form_checkbox">
			<input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
			<div></div>
			<label for="{{checkbox.name}}">{{checkbox.label}}</label>
		</div>

		<button type="submit" class="form_button">{{button}}</button>
		<div class="form_line"></div>
		<p class="form_info">{{info}}</p>
	</div>
	{{/with}}

</main>

{{#with updates}}
<div class="updates">
	<div class="updates_title">{{title}}</div>

	{{#each list}}
	<div class="updates_list_outside">
		<div class="updates_photo">
			<img src="{{photo}}" alt="img" class="updates_photo_img">
		</div>
		<div class="updates_list_inside">
			<div class="updates_nickname">{{nickname}}</div>

			<div class="updates_description">{{description}}</div>
		</div>
	</div>
	{{/each}}

	<a href="{{show_all.url}}" class="show_all_text">{{show_all.text}}</a>
</div>
{{/with}}

{{#with expirience}}
<div class="expirience">

	<h3 class="expirience_title">{{title}}</h3>
	<button class="expirience_badge">{{badge}}</button>

	<div class="expirience_list_outside">
		{{#each list}}
		<div class="expirience_list_inside">
			<div class="expirience_list_name">{{name}}</div>
			<div class="expirience_list_details">{{details}}</div>
		</div>
		{{/each}}
	</div>

</div>
{{/with}}

<footer class="footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>