<header class="header">
	<div class="">
		{{> logo}}
	</div>

	<nav class="header_nav">
		<div class="header_nav_right">
			{{>nav list=header }}
		</div>
	</nav>

</header>

{{#with main}}
<div class="main">
	{{!-- hero --}}
	<img src="{{image}}" alt="Main image" class="main_image">

	<div class="main_content">
		<h1 class="main_title">{{heading}}</h1>
		<p class="main_text">{{descriotion}}</p>
		<a class="button main_button" href="{{href}}">{{button}}</a>
	</div>
</div>
{{/with}}

<main class="blog">
	{{#each featured}}
	<div class="featured">
		<div class="featured_image" style="background-image: url({{photo}})"></div>
		<h2 class="featured_title">{{heading}}</h2>
		<p class="featured_text">{{info}}</p>
		<a class="button featured_button" href="{{linkUrl}}">{{linkText}}</a>
	</div>
	{{/each}}
</main>

<div class="blog1">
	{{#each actions}}
	<div class="actions">
		<h3 class="actions_title">{{heading}}</h3>
		<a href="{{url}}" class="button actions_button">{{text}}</a>
	</div>
	{{/each}}
</div>

<footer class="footer">
	<div>
		{{> logo}}
		<span class="footer_copyright">Copyright 2023</span>
	</div>

	{{#each footer}}
	<div>
		<span class="footer_title">{{title}}</span>
		{{> nav list=links isVertical=true}}
	</div>
	{{/each}}
</footer>